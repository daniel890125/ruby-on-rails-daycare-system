<% content_for :page_title, "Worker Registration" %>
<% content_for :previous_path, getting_started_path %>
<%= content_for :color_code, 'worker' %>

<div class="row select-department">
    <div class="twelvecol">
        <h3>Select the department you work in for <b><%= @daycare.name %></b>:</h3>
        <% @departments.each do |department| %>
            <div class="row item">
                <div class="tencol">
                    <h3><%= department.name %></h3>
                </div>
                <div class="twocol last">
                    <%= link_to 'Select', new_user_registration_path(role: 'worker', daycare_id: @daycare.id, department_id: department.id), :class => 'btn btn-green btn-normal btn-block' %> 
                </div>
            </div>
        <% end %>
    </div>
</div>
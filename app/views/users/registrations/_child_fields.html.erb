<div class="fields">
    <div class="img-preview-container">
        <%= image_tag 'add_child_img.png' %>
    </div>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :birth_date %>
        <%= f.text_field :birth_date, :class => 'datepicker form-control', value: (f.object.birth_date.blank? ? '' : f.object.birth_date.strftime('%d/%m/%Y')) %>
    </div>
    <%= f.fields_for :profile_image do |profile_image| %>
        <div class="form-group">
            <%= profile_image.label 'Profile Image' %>
            <%= profile_image.file_field :file, :class => 'form-control previewer' %>
        </div>
    <% end %>
    <div class="form-group">
        <%= f.label 'Department' %>
        <%= f.collection_select :department_id, @departments, :id, :name, { prompt: true }, { :class => "department-select form-control" } %>
    </div>
    <%= custom_link_to_remove_fields "Remove", f %>
</div>

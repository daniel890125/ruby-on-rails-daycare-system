.row.centralize
  %label.step-instruction= t('illnesses.labels.contact_parent_question')

.row.centralize
  - ['yes', 'no'].each do |ans|
    .radio
      %label
        %input{type: 'radio', name: 'contact[parent][answer]', value: ans}
        = t("illnesses.labels.illness_#{ans}")

.contact-parent-ans#contact-parent-yes
  .form-group
    %label.step-instruction= t('protocols.child_illness_record.contact_parent_message')
    = text_area 'record', 'contact_parent_message', class: 'form-control', rows: '5'

.contact-parent-ans#contact-parent-no
  .form-group
    %label.step-instruction= t('protocols.child_illness_record.contact_parent_reason')
    = text_area 'record', 'contact_parent_reason', class: 'form-control', rows: '5'

<% content_for :page_title, "Invite" %>
<% content_for :previous_path, dashboard_path %>

<div class="row">
    <div class="twelvecol">
        <h3>Invite parents and workers to your Daycare on our platform now by entering their email address in below:</h3>
        <%= form_tag send_invites_manager_daycares_path do %>
            <div class="form-group">
                <%= label_tag :emails %>
                <%= text_field_tag :emails, params[:emails], :class => 'tagsinput form-control' %>
            </div>
            <%= submit_tag "Send Invites", :class => 'btn btn-blue btn-large btn-block' %>
        <% end %>
    </div>
</div>
<% content_for :title, 'Users' %>
<% content_for :breadcrumb, 'Users' %>

<div class="twelvecol">
  <div class="page-header">
    <h2 class="widget widget-header">Users</h2>
  </div>
  <% if @users.empty? %>
    <div class="widget widget-content">
      <div class="helper-notification">
        <p>You don't have any users yet.</p>
        <i class="icon-users"></i>
      </div>
    </div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Stripe Customer Token</th>
            <th>Role</th>
            <th>Created At</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= user.email %>
              </td>
              <td>
                <%= user.stripe_customer_token %>
              </td>
              <td>
                <%= user.role %>
              </td>
              <td class="align-left">
                <%= user.created_at.strftime('%d/%m/%Y at %I:%M%p') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>  

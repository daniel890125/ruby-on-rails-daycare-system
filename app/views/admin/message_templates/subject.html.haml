= content_for :title, 'New Message Template'
- step_size = 4
- page_step = 1

.page-header
  %h3= add_subject_header

.row
  = render partial: '/shared/progress_bar', locals: {step_size: step_size, page_step: page_step}

#main-content
  %h4.step-instruction= t('messages.labels.create_subject')
  = form_tag sub_subject_admin_message_templates_path, method: :get do
    .form-group
      = text_field_tag :subject_title, params[:subject_title], placeholder: t('messages.labels.subject'), class: 'form-control', id: 'subject-title', required: true

    .row.form-buttons
      .col-md-6
        %a{href: admin_message_templates_path, class: 'btn btn-raised btn-info'}= t('form_labels.back')
      .col-md-6
        = submit_tag t('form_labels.next'), class: 'btn btn-raised btn-success'
